<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,700" rel="stylesheet" />
        <link href="{{ asset('assets/css/app.css') }}" rel="stylesheet" />
    {% endblock %}
</head>
    <body>
        {% block body %}
            <main id="app">
                <header id="header" class="st-header">
                    <!-- Main navigation -->
                    <nav id="header-primary-navigation" role="navigation" class="uk-navbar-container" uk-navbar>
                        <div class="uk-navbar-left">
                            <a href="/" class="uk-navbar-item uk-logo" title="Snowtricks - Home">
                                <div class="svg-container">
                                    <object class="svg-content" type="image/svg+xml" width="100%" height="100%" data="{{ asset('assets/images/logo-snowtricks.svg') }}"></object>
                                </div>
                            </a>
                            <p class="uk-text-middle st-slogan">// <em>Born to ride...</em> //</p>
                        </div>
                        <div class="uk-navbar-right">
                            <a class="uk-navbar-toggle uk-hidden@m" uk-navbar-toggle-icon href="#" uk-toggle="target: #footer-primary-navigation; cls: uk-display-block; animation: uk-animation-fade; queued: true"></a>
                            <div class="uk-visible@m">
                                {% include 'main-navigation.html.twig' %}
                            </div>
                        </div>
                    </nav>
                    {% block header %}{% endblock %}
                </header>
                <section id="content">
                    {% block content %}{% endblock %}
                </section>
                <footer id="footer" class="st-footer">
                    {% block footer %}{% endblock %}
                    <div class="uk-position-relative uk-section uk-section-secondary st-footer-infos">
                        {# Only on home page #}
                        {% if app.request.pathinfo == '/' %}
                        <!-- Home page only-->
                        <div class="uk-position-top-right"><a class="uk-button uk-button-primary" href="#st-trick-list" uk-scroll><span uk-icon="icon: arrow-up; ratio: 2"></span>&nbsp;Go back to top</a></div>
                        {% endif %}
                        <p class="uk-text-center">SnowTricks Â© {{ "now"|date("Y") }}<br>Powered by<br class="uk-hidden@m"> Symfony 4 & UIkit frameworks</p>
                        <div class="uk-margin-auto st-footer-logo">
                            <div class="uk-display-inline-block svg-container">
                                <object class="svg-content" type="image/svg+xml" width="100%" height="100%" data="{{ asset('assets/images/logo-snowtricks-footer.svg') }}"></object>
                            </div>
                        </div>
                    </div>
                </footer>
                <!-- Main navigation in footer for smaller screen -->
                <nav id="footer-primary-navigation" class="uk-navbar-container uk-hidden@m st-footer-nav st-footer-nav--none" role="navigation" uk-navbar>
                    <div class="uk-text-center">
                        {% include 'main-navigation.html.twig' %}
                    </div>
                </nav>
            </main>
        {% endblock %}
        {% block javascripts %}
            <script src="{{ asset('assets/js/app.js') }}"></script>
        {% endblock %}
    </body>
</html>
