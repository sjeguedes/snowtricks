{% extends 'base.html.twig' %}

{% block title %}SnowTricks - Registration form{% endblock %}

{% block header %}
    {% include 'all/image-header-loader.html.twig' with {'spinnerRatio': '2.5'} %}
    <div class="uk-position-relative uk-flex uk-flex-center uk-flex-middle uk-background-cover uk-background-blend-darken uk-invisible st-background-image-header" data-src="{{ asset('assets/images/snowboard-4.jpg') }}" style="background-position: 40% 25%; height: 600px" uk-img>
        <div class="uk-position-center uk-text-center uk-padding-small st-overlay-image-header-container">
            <p class="st-color-white st-text-shadow-dark uk-text-large">
                Please fill in the form to become a really proud member!
            </p>
            <p class="st-color-white st-text-shadow-dark uk-text-medium uk-visible@m">
                Once registered, you will need to activate your account.
            </p>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="uk-heading-line uk-text-large uk-text-center uk-margin-top">
        <span uk-icon="icon: unlock; ratio: 2"></span>
    </div>
    <div id="st-register" class="uk-section uk-preserve-color">
        <div class="uk-container uk-margin-medium-bottom">
            <h1 class="uk-heading-bullet uk-text-large uk-text-center uk-text-uppercase uk-text-bold">
                Use this form to take part of our tribe and stay in touch.
            </h1>
            <p class="uk-text-center uk-text-uppercase uk-text-bold st-color-red">
                Before validate your registration request,<br>
                please check expected information about you and give your agreement.
            </p>
        </div>
        <div id="st-register-form" class="uk-container-expand st-register-form">
            <div class="uk-text-center">
                <h2 class="uk-display-inline-block uk-padding-small uk-box-shadow-medium st-border-white-small uk-text-small uk-text-bold uk-text-uppercase st-background-yellow">
                    Member registration area
                </h2>
            </div>
            <div class="uk-flex-center uk-grid uk-grid-collapse">
                <div class="uk-width-5-6 uk-width-3-5@s uk-width-2-5@m uk-width-2-5@l uk-width-1-3@xl uk-card uk-card-primary uk-box-shadow-medium st-border-white-small">
                    {% if uniqueUserError is not null %}
                        <div class="uk-card-header uk-padding-small uk-text-center">
                            {# User error #}
                            <div class="uk-label uk-form-danger uk-box-shadow-large uk-text-bold">
                                <p class="uk-margin-remove">
                                    <span uk-icon="icon: warning; ratio: 0.8"></span>
                                    {{ uniqueUserError['email'] is defined ? uniqueUserError['email']|raw : uniqueUserError['username']|raw }}
                                </p>
                            </div>
                        </div>
                    {% endif %}
                    {# Registration form #}
                    <div id="st-form" class="uk-card-body uk-padding-medium{{ registrationForm.vars.valid == 1 and uniqueUserError is null ?: ' st-form-error' }}">
                        {% form_theme registrationForm 'form/uikit_3_form.html.twig' %}
                        {{ form_start(registrationForm, {'attr': {'class': 'uk-grid uk-grid-collpase', 'novalidate': ''}}) }}
                            {# Family name #}
                            <div class="uk-width-1-1 uk-margin-small-bottom">
                                {% if registrationForm.familyName.vars.valid == 0 %}
                                    {{ form_errors(registrationForm.familyName) }}
                                {% endif %}
                                {{ form_label(registrationForm.familyName, 'Family name', {'label_attr': {'class': 'uk-form-label'}}) }}
                                <div class="uk-inline uk-flex">
                                    <span class="uk-form-icon" uk-icon="icon: users; ratio: 1.1"></span>
                                    {{ form_widget(registrationForm.familyName, {
                                        'attr': {'class': 'uk-input'},
                                        'value': registrationForm.familyName.vars.value})
                                    }}
                                    {% if registrationForm.familyName.vars.errors.form.submitted == 1 %}
                                        {% set class = registrationForm.familyName.vars.valid == 0 ? 'uk-form-danger' : 'uk-form-success' %}
                                        {% set icon = registrationForm.familyName.vars.valid == 0 ? 'warning' : 'check' %}
                                        <span class="uk-form-icon uk-form-icon-flip {{ class }}" uk-icon="icon: {{ icon }}"></span>
                                    {% endif %}
                                </div>
                            </div>
                            {# Firstname #}
                            <div class="uk-width-1-1 uk-margin-small-bottom">
                                {% if registrationForm.firstName.vars.valid == 0 %}
                                    {{ form_errors(registrationForm.firstName) }}
                                {% endif %}
                                {{ form_label(registrationForm.firstName, 'Firstname', {'label_attr': {'class': 'uk-form-label'}}) }}
                                <div class="uk-inline uk-flex">
                                    <span class="uk-form-icon" uk-icon="icon: user; ratio: 0.9"></span>
                                    {{ form_widget(registrationForm.firstName, {
                                        'attr': {'class': 'uk-input'},
                                        'value': registrationForm.firstName.vars.value})
                                    }}
                                    {% if registrationForm.firstName.vars.errors.form.submitted == 1 %}
                                        {% set class = registrationForm.firstName.vars.valid == 0 ? 'uk-form-danger' : 'uk-form-success' %}
                                        {% set icon = registrationForm.firstName.vars.valid == 0 ? 'warning' : 'check' %}
                                        <span class="uk-form-icon uk-form-icon-flip {{ class }}" uk-icon="icon: {{ icon }}"></span>
                                    {% endif %}
                                </div>
                            </div>
                            {# Username #}
                            <div class="uk-width-1-1 uk-margin-small-bottom">
                                {% if registrationForm.userName.vars.valid == 0 %}
                                {{ form_errors(registrationForm.userName) }}
                                {% endif %}
                                {{ form_label(registrationForm.userName, 'Username (nickname)', {'label_attr': {'class': 'uk-form-label'}}) }}
                                {# --- Username reminder --- #}
                                <div class="uk-inline">
                                    <a href="#" class="uk-button-link">
                                        <span class="st-color-yellow" uk-icon="icon: question; ratio: 1.25"></span>
                                    </a>
                                    <div uk-drop="mode: click; pos: top-center; animation: uk-animation-slide-top-small; duration: 500">
                                        <div class="uk-inline uk-position-relative uk-padding-small uk-border-rounded uk-box-shadow-medium st-background-yellow st-color-black">
                                            <a href="#" class="uk-drop-close uk-position-absolute uk-padding-small">
                                                <span class="st-color-blue" uk-icon="icon: close"></span>
                                            </a>
                                            <p class="uk-margin-remove uk-text-center st-line-height-normal">
                                                <small class="uk-display-block uk-margin-small-top uk-margin-small-bottom uk-text-bold">
                                                    <span uk-icon="icon: info"></span> Username reminder<br>
                                                </small>
                                                <small>
                                                    You need to use a chosen nickname.<br>
                                                    Nickname can contain only lowercase and uppercase letters, numbers, top dash "<strong>-</strong>" and underscore "<strong>_</strong>" characters.<br>
                                                    Its length is expected to be between a minimum of 3 and a maximum of 15 characters.<br>
                                                </small>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                {# --- end Username reminder --- #}
                                <div class="uk-inline uk-flex">
                                    <span class="uk-form-icon" uk-icon="icon: user"></span>
                                    {{ form_widget(registrationForm.userName, {
                                        'attr': {'class': 'uk-input'},
                                        'value': registrationForm.userName.vars.value})
                                    }}
                                    {% if registrationForm.userName.vars.errors.form.submitted == 1 %}
                                        {% set class = registrationForm.userName.vars.valid == 0 or uniqueUserError['username'] is defined ? 'uk-form-danger' : 'uk-form-success' %}
                                        {% set icon = registrationForm.userName.vars.valid == 0 or uniqueUserError['username'] is defined ? 'warning' : 'check' %}
                                        <span class="uk-form-icon uk-form-icon-flip {{ class }}" uk-icon="icon: {{ icon }}"></span>
                                    {% endif %}
                                </div>
                            </div>
                            {# Email #}
                            <div class="uk-width-1-1 uk-margin-small-bottom">
                                {% if registrationForm.email.vars.valid == 0 %}
                                    {{ form_errors(registrationForm.email) }}
                                {% endif %}
                                {{ form_label(registrationForm.email, 'Personal email', {'label_attr': {'class': 'uk-form-label'}}) }}
                                {# --- Email reminder --- #}
                                <div class="uk-inline">
                                    <a href="#" class="uk-button-link">
                                        <span class="st-color-yellow" uk-icon="icon: question; ratio: 1.25"></span>
                                    </a>
                                    <div uk-drop="mode: click; pos: top-center; animation: uk-animation-slide-top-small; duration: 500">
                                        <div class="uk-inline uk-position-relative uk-padding-small uk-border-rounded uk-box-shadow-medium st-background-yellow st-color-black">
                                            <a href="#" class="uk-drop-close uk-position-absolute uk-padding-small">
                                                <span class="st-color-blue" uk-icon="icon: close"></span>
                                            </a>
                                            <p class="uk-margin-remove uk-text-center st-line-height-normal">
                                                <small class="uk-display-block uk-margin-small-top uk-margin-small-bottom uk-text-bold">
                                                    <span uk-icon="icon: info"></span> Email reminder<br>
                                                </small>
                                                <small>
                                                    Email format does not accept <strong>IP</strong> addresses or <strong>IDN</strong> - Internationalized Domain Names.<br>
                                                    Email format accepts most of authorized special characters with insensitive case.
                                                </small>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                {# --- end Email reminder --- #}
                                <div class="uk-inline uk-flex">
                                    <span class="uk-form-icon" uk-icon="icon: mail; ratio: 1.1"></span>
                                    {{ form_widget(registrationForm.email, {
                                        'attr': {'class': 'uk-input'},
                                        'value': registrationForm.email.vars.value})
                                    }}
                                    {% if registrationForm.email.vars.errors.form.submitted == 1 %}
                                        {% set class = registrationForm.email.vars.valid == 0 or uniqueUserError['email'] is defined ? 'uk-form-danger' : 'uk-form-success' %}
                                        {% set icon = registrationForm.email.vars.valid == 0 or uniqueUserError['email'] is defined ? 'warning' : 'check' %}
                                        <span class="uk-form-icon uk-form-icon-flip {{ class }}" uk-icon="icon: {{ icon }}"></span>
                                    {% endif %}
                                </div>
                            </div>
                            {# (New) Password #}
                            <div class="uk-width-1-1 uk-margin-small-bottom">
                                {% if registrationForm.passwords.password.vars.valid == 0 %}
                                    {{ form_errors(registrationForm.passwords.password) }}
                                {% endif %}
                                {{ form_label(registrationForm.passwords.password, 'Password', {'label_attr': {'class': 'uk-form-label'}}) }}
                                {# --- Password reminder --- #}
                                <div class="uk-inline">
                                    <a href="#" class="uk-button-link">
                                        <span class="st-color-yellow" uk-icon="icon: question; ratio: 1.25"></span>
                                    </a>
                                    <div uk-drop="mode: click; pos: top-center; animation: uk-animation-slide-top-small; duration: 500">
                                        <div class="uk-inline uk-position-relative uk-padding-small uk-border-rounded uk-box-shadow-medium st-background-yellow st-color-black">
                                            <a href="#" class="uk-drop-close uk-position-absolute uk-padding-small">
                                                <span class="st-color-blue" uk-icon="icon: close"></span>
                                            </a>
                                            <p class="uk-margin-remove uk-text-center st-line-height-normal">
                                                <small class="uk-display-block uk-margin-small-top uk-margin-small-bottom uk-text-bold">
                                                    <span uk-icon="icon: info"></span> Password reminder<br>
                                                </small>
                                                <small>
                                                    Your password must contain at least 1 number, 1 lowercase letter, 1 uppercase letter, 1 special character.<br>
                                                    Its length is expected to be between a minimum of 8 and a maximum of 20 characters.
                                                </small>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                {# --- end Password reminder --- #}
                                <div class="uk-inline uk-flex">
                                    <span class="uk-form-icon" uk-icon="icon: lock"></span>
                                    {{ form_widget(registrationForm.passwords.password, {
                                        'attr': {'class': 'uk-input'},
                                        'value': registrationForm.passwords.password.vars.value})
                                    }}
                                    {% if registrationForm.passwords.password.vars.errors.form.submitted == 1 %}
                                        {% set class = registrationForm.passwords.password.vars.valid == 0 ? 'uk-form-danger' : 'uk-form-success' %}
                                        {% set icon = registrationForm.passwords.password.vars.valid == 0 ? 'warning' : 'check' %}
                                        <span class="uk-form-icon uk-form-icon-flip {{ class }}" uk-icon="icon: {{ icon }}"></span>
                                    {% endif %}
                                </div>
                            </div>
                            {# Confirmed Password #}
                            <div class="uk-width-1-1 uk-margin-small-bottom">
                                {% if registrationForm.passwords.confirmedPassword.vars.valid == 0 %}
                                    {{ form_errors(registrationForm.passwords.confirmedPassword) }}
                                {% endif %}
                                {{ form_label(registrationForm.passwords.confirmedPassword, 'Confirm password', {'label_attr': {'class': 'uk-form-label'}}) }}
                                <div class="uk-inline uk-flex">
                                    <span class="uk-form-icon" uk-icon="icon: lock"></span>
                                    {{ form_widget(registrationForm.passwords.confirmedPassword, {
                                        'attr': {'class': 'uk-input', 'maxlength': '20'},
                                        'value': registrationForm.passwords.confirmedPassword.vars.value})
                                    }}
                                    {% if registrationForm.passwords.confirmedPassword.vars.errors.form.submitted == 1 %}
                                        {% set class = (registrationForm.passwords.password.vars.valid == 0)
                                            or (registrationForm.passwords.confirmedPassword.vars.value != registrationForm.passwords.password.vars.value)
                                            ? 'uk-form-danger' : 'uk-form-success' %}
                                        {% set icon = (registrationForm.passwords.password.vars.valid == 0)
                                            or (registrationForm.passwords.confirmedPassword.vars.value != registrationForm.passwords.password.vars.value)
                                            ? 'warning' : 'check' %}
                                        <span class="uk-form-icon uk-form-icon-flip {{ class }}" uk-icon="icon: {{ icon }}"></span>
                                    {% endif %}
                                </div>
                            </div>
                            {# Agreement #}
                            <div class="uk-width-1-1 uk-margin-small-top uk-margin-small-bottom">
                                <div class="uk-inline">
                                    {% if registrationForm.agreement.vars.valid == 0 %}
                                        {{ form_errors(registrationForm.agreement) }}
                                    {% endif %}
                                    {{ form_widget(registrationForm.agreement, {
                                        'attr': {'class': registrationForm.agreement.vars.valid == 0 ? 'uk-checkbox uk-form-error' : 'uk-checkbox'},
                                        })
                                    }}
                                    {{ form_label(registrationForm.agreement, 'I accept the terms of use', {'label_attr': {'class': 'uk-form-label'}}) }}
                                    {# --- Agreement reminder --- #}
                                    <div class="uk-inline">
                                        <a href="#" class="uk-button-link">
                                            <span class="st-color-yellow" uk-icon="icon: question; ratio: 1.25"></span>
                                        </a>
                                        <div uk-drop="mode: click; pos: top-center; animation: uk-animation-slide-top-small; duration: 500">
                                            <div class="uk-inline uk-position-relative uk-padding-small uk-border-rounded uk-box-shadow-medium st-background-yellow st-color-black">
                                                <a href="#" class="uk-drop-close uk-position-absolute uk-padding-small">
                                                    <span class="st-color-blue" uk-icon="icon: close"></span>
                                                </a>
                                                <p class="uk-margin-remove uk-text-center st-line-height-normal">
                                                    <small class="uk-display-block uk-margin-small-top uk-margin-small-bottom uk-text-bold">
                                                        <span uk-icon="icon: info"></span> Terms of use<br>
                                                    </small>
                                                    <small>
                                                        Your account will not be used for commercial ads or given to our partners.<br>
                                                        Your personal data can be modified or deleted by using a simple request sent to:
                                                        <strong><a class="uk-link-text" href="mailto:{{ globalContactEmail }}" title="Contact Email"><span class="st-color-blue">SnowTricks - Member service</span></a></strong>
                                                    </small>
                                                </p>
                                            </div>
                                        </div>

                                    </div>
                                    {# --- end Agreement reminder --- #}
                                </div>
                            </div>
                            {# CSRF token #}
                            {{ form_row(registrationForm.token, {'value': csrf_token('register_token')}) }}
                            <div class="uk-width-1-1 uk-flex uk-flex-center">
                                <button type="submit" class="uk-button uk-button-secondary uk-border-rounded uk-box-shadow-hover-medium uk-text-bold" title="Validate">
                                    Create an account <span uk-icon="icon: chevron-right; ratio: 1.3"></span>
                                </button>
                            </div>
                        {{ form_end(registrationForm) }}
                        <p class="uk-text-center"><small>All fields are mandatory.</small></p>
                    </div>
                    <div class="uk-card-footer">
                        {# Login #}
                        <div class="uk-text-center">
                            <a href="{{ path('connection') }}" class="uk-link-text uk-button-text uk-display-inline-block uk-margin-small-bottom" title="Already an account?">
                                <span uk-icon="icon: arrow-right"></span>
                                Already an account?
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
